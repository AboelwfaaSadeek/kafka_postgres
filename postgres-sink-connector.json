{
    "name": "postgres-orders-sink",
    "config": {
        "connector.class": "io.confluent.connect.jdbc.JdbcSinkConnector",
        "tasks.max": "1",
        "topics": "orders",
        
        "connection.url": "jdbc:postgresql://postgres:5432/orders_db",
        "connection.user": "kafkauser",
        "connection.password": "kafkapass",
        
        "key.converter": "org.apache.kafka.connect.storage.StringConverter", 
        "value.converter": "org.apache.kafka.connect.json.JsonConverter",
        "value.converter.schemas.enable": "false",
        
        "table.name.format": "orders",
        "auto.create": "false",
        "auto.evolve": "false",
        
        "insert.mode": "upsert", 
        "pk.mode": "record_value",
        "pk.fields": "order_id",
        
        "auto.offset.reset": "latest",
        
        "fields.whitelist": "order_id,customer_name,amount,status",
        "field.map": "order_id=order_id,customer_name=customer_name,amount=amount,status=status"
    }
}